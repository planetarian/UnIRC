<Page
    x:Class="UnIRC.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UnIRC"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:UnIRC.Models"
    mc:Ignorable="d"
    DataContext="{Binding M, Source={StaticResource Locator}}">
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="WideMode">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="800"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="NavigationSplitView.DisplayMode" Value="CompactInline"/>
                        <Setter Target="NavigationSplitView.IsPaneOpen" Value="True"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="TabletMode">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="600"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="NavigationSplitView.DisplayMode" Value="CompactOverlay"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="PhoneMode">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="ContentMenuButton.Visibility" Value="Visible" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <SplitView x:Name="NavigationSplitView" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" DisplayMode="Overlay" CompactPaneLength="40">
            <SplitView.Pane>
                <StackPanel Orientation="Vertical">
                    <StackPanel.DataContext>
                        <models:Menu />
                    </StackPanel.DataContext>
                    <StackPanel
                        Orientation="Horizontal"
                        Background="{ThemeResource
                        SystemControlPageBackgroundChromeLowBrush}">
                        <Button
                            x:Name="NavButton"
                            Content="&#xE700;"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="20"
                            Width="40"
                            Height="40"
                            Click="MenuButton_Click"
                            Background="Transparent"
                            HorizontalAlignment="Left" />
                    </StackPanel>
                    <ListBox
                        x:Name="Menu"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        SelectionChanged="Menu_SelectionChanged"
                        ItemsSource="{Binding MenuItems}"
                        Background="Transparent">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="10,5"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        x:Name="Glyph"
                                        Text="{Binding Icon}"
                                        FontFamily="Segoe MDL2 Assets"
                                        FontSize="18"
                                        Width="40"
                                        VerticalAlignment="Center"/>
                                    <TextBlock
                                        Text="{Binding Title}"
                                        FontSize="20"
                                        VerticalAlignment="Center"
                                        Padding="0,0,0,1"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </SplitView.Pane>
            <SplitView.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Height="40" Grid.Row="0">
                        <Button
                            x:Name="ContentMenuButton"
                            Content="&#xE700;"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="20"
                            Width="40"
                            Height="40"
                            Click="MenuButton_Click"
                            Background="Transparent"
                            HorizontalAlignment="Left"
                            Visibility="Collapsed" />
                        <TextBlock Text="UnIRC" Margin="16,8,0,0" />
                    </StackPanel>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <Frame x:Name="ContentFrame"/>
                    </ScrollViewer>
                </Grid>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>
